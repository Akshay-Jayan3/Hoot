{
  "name": "Hoot",
  "version": "0.0.1",
  "homepage": "./",
  "main": "./public/electron.js",
  "author": "Akshay Jayan",
  "description": "Immerse yourself in a world of sound with our sleek and intuitive music player. Elevate your audio experience with a modern design, customizable themes, and a host of features that make navigating and enjoying your music collection a delight.",
  "private": true,
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.14.14",
    "@mui/material": "^5.14.14",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "electron-dialog": "^2.0.0",
    "electron-is-dev": "^2.0.0",
    "electronmon": "^2.0.2",
    "howler": "^2.2.4",
    "react": "^18.2.0",
    "react-audio-player": "^0.17.0",
    "react-dom": "^18.2.0",
    "react-loader-spinner": "^6.1.0",
    "react-router-dom": "^6.17.0",
    "react-scripts": "5.0.1",
    "react-window": "^1.8.11",
    "sass": "^1.69.4",
    "sequelize": "^6.33.0",
    "sequelize-cli": "^6.6.1",
    "sqlite3": "^5.1.6",
    "wait-on": "^7.2.0",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "concurrently -k \"cross-env BROWSER=none npm run react\" \"wait-on http://localhost:3000 && electronmon .\"",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "react": "cross-env PORT=3000 react-scripts start",
    "electron:package:mac": "yarn build && electron-builder -m -c.extraMetadata.main=build/electron.js",
    "electron:package:win": "yarn build && electron-builder -w -c.extraMetadata.main=build/electron.js",
    "electron:package:linux": "yarn build && electron-builder -l -c.extraMetadata.main=build/electron.js"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      "last 1 electron version",
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 electron version",
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^27.0.2",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.Hoot.music",
    "productName": "Hoot",
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "public",
      "output": "App"
    },
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis",
      "icon": "build/favicon.ico"
    },
    "linux": {
      "target": "deb"
    },
    "nsis": {
      "perMachine": false,
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "artifactName": "Hoot.setup.${ext}",
      "uninstallDisplayName": "Hoot"
    }
  }
}
